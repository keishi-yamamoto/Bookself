<header>
  <div class="container">
    <div class="row">
      <div class="col-sm-3 text-center">Bookself</div>
      <div class="col-sm-9 text-right">
        <% if user_signed_in? %>
          <%= current_user.name %>
          <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
