<h2><%= current_user.name %>さんの本棚一覧</h2>
<table class="table table-bordered">
  <thead>
    <tr>
      <td>名前</td>
      <td>登録タイトル数</td>
      <td></td>
    </tr>
  </thead>
  <tbody>
    <% @book_shelves.each do |book_shelf| %>
      <tr>
        <td>
          <%= link_to book_shelf_path(book_shelf) do %>
            <%= book_shelf.name %>
          <% end %>
        </td>
        <td><%= book_shelf.user_titles.count %>
        <td><%= link_to "destroy", book_shelf_path(book_shelf), method: :delete, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
    <tr>
      <td><%= link_to "未登録書籍", book_shelf_nil_path%></td>
      <td><%= @lost_titles.count %></td>
    </tr>
  </tbody>
</table>
