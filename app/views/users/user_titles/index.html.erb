<h2><%= current_user.name %>さんの所持シリーズ一覧</h2>
<table class="table table-bordered">
  <thead>
    <tr>
      <td>シリーズ名</td>
      <td>著者</td>
      <td>出版社</td>
      <td>所持巻数</td>
      <td>登録本棚</td>
    </tr>
  </thead>
  <tbody>
    <% if @user_titles.present? %>
      <% @user_titles.each do |user_title| %>
        <tr>
          <td><%= user_title.title.name %></td>
          <td><%= user_title.title.author %></td>
          <td><%= user_title.title.publisher %></td>
          <td></td>
          <td>
            <% if user_title.book_shelf %>
              <%= link_to book_shelf_path(user_title.book_shelf) do %>
                <%= user_title.book_shelf.name %>
              <% end %>
            <% else %>
              未登録
            <% end %>
          </td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>