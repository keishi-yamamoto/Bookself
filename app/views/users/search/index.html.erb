<% if @items %>
  <div class="col-10 offset-1">
    <table class="table table-borderd table-hover">
      <thead>
        <tr>
          <td></td>
          <td>書籍情報</td>
          <td>発売日</td>
        </tr>
      </thead>
      <tbody>
        <% @items.each_with_index do |item,i| %>
          <tr id="row-<%= i %>" class="item">
            <td><%= image_tag item['mediumImageUrl'] %></td>
            <td id="book-info-<%= i %>">
              <p id="book-title-<%= i %>"><%= item['title'] %></p>
              <p id="book-author-<%= i %>"><%= item['author'] %></p>
              <p id="book-publisher-<%= i %>"><%= item['publisherName'] %></p>
            </td>
            <td><%= item['salesDate'] %></td>
            <%# js側に送るためのデータ %>
            <div id="tag-info-<%= i %>" data-title="<%= @titles[i] %>"></div>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <%# モーダルの設定 %>
  <div class="modal fade" id="Modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h6 class="modal-title" id="exampleModalLabel">本棚に入れるシリーズ名を選んでください</h6>
          <button type="button" class="close" data-dismiss="modal" aria-label="閉じる">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body" id="modal-body"></div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">閉じる</button>
        </div>
      </div>
    </div>
  </div>
<% else %>
  検索しましたが何も見つかりませんでした
<% end %>