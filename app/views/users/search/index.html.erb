<% if @items %>
  <div class="col-10 offset-1">
    <table class="table table-borderd table-hover">
      <thead>
        <tr>
          <td></td>
          <td>書籍情報</td>
          <td>発売日</td>
        </tr>
      </thead>
      <tbody>
        <% @items.each_with_index do |item,i| %>
          <tr id="row-<%= i %>" class="item">
            <td><%= image_tag item['mediumImageUrl'] %></td>
            <td>
              <%= item['title'] %><br>
              <%= item['author'] %><br>
              <%= item['publisherName'] %><br>
              <%# 登録ボタンの設定 %>
              <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#Modal-<%= i %>">
                登録
              </button>
              <%# js側に送るためのデータ %>
              <div id="tag-info-<%= i %>" data-title="<%= @titles[i] %>"></div>
            </td>
            <td><%= item['salesDate'] %></td>
          </tr>
          <%# モーダルの設定 %>
          <div class="modal fade" id="Modal-<%= i %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h6 class="modal-title" id="exampleModalLabel"><%= item['title'] %></h6>
                  <button type="button" class="close" data-dismiss="modal" aria-label="閉じる">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">
                  <%= @titles[i] %>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-dismiss="modal">閉じる</button>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  検索しましたが何も見つかりませんでした
<% end %>