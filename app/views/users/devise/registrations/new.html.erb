<div class="container">
  <h1>新規会員登録</h1>
  <div class="offset-3 col-6">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
        
      <div class="form-group">
        <div class="row">
          <%= f.label "名前", class:"col-5 col-form-label" %>
          <%= f.text_field :name, class:"col-7 form-control", autofocus: true %>
        </div>
        <small class="form-text text-right is-valid" id="name_count">0/20</small>
      </div>

      <div class="form-group">
        <div class="row">
          <%= f.label "ユーザーid", class:"col-5 col-form-label" %>
          <%= f.text_field :elastic_id, class:"col-7 form-control", value:@eid %>
        </div>
      <small class="form-text text-right" id="id_validation"></small>
      </div>

      <div class="form-group">
        <div class="row">
          <%= f.label "メールアドレス", class:"col-5 col-form-label" %>
          <%= f.email_field :email, autocomplete: "email", class:"col-7 form-control" %>
        </div>
      <small class="form-text text-right" id="email_validation"></small>
      </div>

      <div class="form-group row">
        <%= f.label "パスワード（6文字以上）", class:"col-5 col-form-label" %>
        <%= f.password_field :password, autocomplete: "new-password", class:"col-7 form-control" %>
      </div>

      <div class="form-group row">
        <%= f.label "パスワード確認用", class:"col-5 col-form-label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"col-7 form-control" %>
      </div>

      <div class="form-group row">
          <%= f.submit "新規登録", class: "btn btn-success offset-5 col-2" %>
      </div>
    <% end %>

    <div class="row">
      既に登録済みの方
        <%= link_to  "こちら", new_user_session_path %>   からログインしてください。
    </div>
  </div>
</div>