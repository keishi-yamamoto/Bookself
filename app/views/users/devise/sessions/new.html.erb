<div class="container">
  <h1>ログイン</h1>
  <div class="offset-3 col-6">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= render "users/devise/shared/error_messages", resource: resource %>
      
      <div class="form-group row">
        <%= f.label "メールアドレス", class: "col-5 col-form-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-7 form-control" %>
      </div>

      <div class="form-group row">
        <%= f.label "パスワード", class: "col-5 col-form-label" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "col-7 form-control" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field offset-5">
          <%= f.check_box :remember_me %>
          <%= f.label "ログイン情報を保持する" %>
        </div>
      <% end %>

      <div class="form-group row offset-5 col-2">
        <%= f.submit "ログイン", class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>